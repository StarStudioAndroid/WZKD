<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="#fcfcfc"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="40dp"
            android:gravity="center_vertical"
            android:onClick="zhinan"
            android:layout_height="wrap_content">
            <ImageButton
                android:onClick="zhinan"
                android:scaleType="fitCenter"
                android:background="@mipmap/icon_detail_goback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:gravity="center_vertical"
            android:onClick="collect"
            android:layout_height="wrap_content">
        <ImageButton
            android:scaleType="fitCenter"
            android:onClick="collect"
            android:id="@+id/bt_jieshao_collect"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_detail_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />
    <ScrollView
        android:id="@+id/scrollView"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">
        <LinearLayout
            android:paddingBottom="20dp"
            android:paddingLeft="20.0dip"
            android:paddingRight="20.0dip"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <View
                        android:layout_gravity="center_vertical"
                        android:background="#36648B"
                        android:layout_width="6dp"
                        android:layout_height="35dp" />
                    <TextView
                        android:id="@+id/tv_jieshao_didianname"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        style="@style/style_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地点名字:" />
                </LinearLayout>
                    <com.exe.feife.wzkd2.wzkd.ui.view.SlideView
                        android:id="@+id/vf_jieshao"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="230dp" >

                    </com.exe.feife.wzkd2.wzkd.ui.view.SlideView>
            </LinearLayout>
            <TextView
                android:layout_marginTop="8dp"
                style="@style/style_subtitle"
                android:id="@+id/jianjie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="简介:" />
            <View
                android:background="@color/divider"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp" />
            <TextView
                android:text="地点简介"
                style="@style/style_content"
                android:id="@+id/jianjieneirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
            <TextView
                style="@style/style_subtitle"
                android:id="@+id/zhinan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="指南:" />
            <View
                android:background="@color/divider"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="5dp" />
            <TextView
                style="@style/style_content"
                android:id="@+id/lv_zhinanneirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="指南内容" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>