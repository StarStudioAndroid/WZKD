<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.exe.feife.wzkd2.wzkd.ui.CollectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <ImageButton
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_more_goback"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_jieshao_didianname"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的收藏" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />
    <com.exe.feife.wzkd2.wzkd.ui.view.SlideListView2
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/lv_collect"
        android:layout_width="match_parent"
        android:divider="@color/divider"
        android:dividerHeight="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.9">
    </com.exe.feife.wzkd2.wzkd.ui.view.SlideListView2>
</LinearLayout>
